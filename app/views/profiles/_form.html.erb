<div class="form_box">  
  <% if profile.errors.present? %>
    <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <p class="employee_index"><%= link_to '一覧に戻る', employees_path, class: 'return-btn'  %></p>
  <%= render partial: 'employee_info', locals: { employee: @employee } %>

  <%= form_with model: [employee, profile], local: true do |f| %>
    <div class="form_group">
      <%= f.label :profile, class: 'label' %>
      <%= f.text_area :profile %>
    </div>
    <div><%= f.submit '保存する', class: "article_btn" %></div>
  <% end %>
</div>
