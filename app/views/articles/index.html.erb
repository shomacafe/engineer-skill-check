<div class="employee_index">
  <% if flash.notice.present? %>
    <p><%= flash.notice %></p>
  <% end %>

  <% if current_user.news_posting_auth %>
    <p class="new_employee"><%= link_to '新規追加', new_article_path, class: 'btn' %></p>
  <% end %>

  <table class="employee_table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th><%= sort_article "created_at", "公開日" %></th>
      </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr class="employee">
        <th><%= link_to article.title, article_path(article) %></th>
        <th class="name"><%= article.created_at %></th>
        <% if current_user.news_posting_auth %>
          <% if article.employee == current_user %>
            <th class="btn_th"><%= link_to '編集', edit_article_path(article), class: 'btn' %></th>
            <th class="btn_th"><%= link_to '削除', article, method: :delete, data: { confirm: "お知らせ「#{article.title}」を削除します。よろしいですか？" }, class: 'btn' %></th>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
